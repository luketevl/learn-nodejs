<!DOCTYPE>
<html>
  <body>
    <div>
      <% if(errosValidation){%>
        <ul>
          <% for(var i = 0 ; i < errosValidation.length; i++) { %>
            <li><%=errosValidation[i].param%> - <%=errosValidation[i].msg%></li>
          <%}%>
        </ul>
      <% }%>
    </div>
    <form action="/produtos" method="post">
      <label for="titulo">Titulo</label>
      <input type="text" name="titulo" value="<%=produto.titulo%>" />

      <label for="descricao">descricao</label>
      <textarea  name="descricao" ><%=produto.descricao%></textarea>

      <label for="preco">preco</label>
      <input type="text" name="preco" value="<%=produto.preco%>"/>

      <input type="submit" value="Salvar" />
    </form>
  </body>
</html>
